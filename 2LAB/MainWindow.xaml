<Window x:Class="_2LAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Диспетчер компоновки" Height="450" Width="800">
    <DockPanel>
        <!-- Панель кнопок сверху -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <TextBlock Text="Последние документы" FontWeight="Bold" Margin="0,0,10,5" />
            <Button Content="Открыть" Margin="2"/>
            <Button Content="Сохранить" Margin="2"/>
            <Button Content="Закрыть" Margin="2"/>
            <Button Content="Обработать" Margin="2"/>
            <Button Content="О программе" Margin="2"/>
        </StackPanel>

        <!-- Список файлов слева -->
        <StackPanel DockPanel.Dock="Left" Margin="5">
            <ListBox Width="100" Height="200" BorderThickness="0">
                <ListBoxItem>1.txt</ListBoxItem>
                <ListBoxItem>2.txt</ListBoxItem>
                <ListBoxItem>3.txt</ListBoxItem>
                <ListBoxItem>4.txt</ListBoxItem>
                <ListBoxItem>5.txt</ListBoxItem>
                <ListBoxItem>6.txt</ListBoxItem>
            </ListBox>
        </StackPanel>

        <!-- Основная область -->
        <StackPanel Margin="10">
            <!-- Верхняя строка с выбранными документами -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                <TextBlock Text="1.txt" FontWeight="Bold" Margin="5,0"/>
                <TextBlock Text="2.txt" Margin="5,0"/>
                <TextBlock Text="3.txt" Margin="5,0"/>
            </StackPanel>

            <!-- Цветные квадраты -->
            <WrapPanel HorizontalAlignment="Center">
                <Border Background="Yellow" Width="80" Height="80" Margin="5">
                    <TextBlock Text="A" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="Red" Width="80" Height="80" Margin="5">
                    <TextBlock Text="B" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="Green" Width="80" Height="80" Margin="5">
                    <TextBlock Text="C" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="Blue" Width="80" Height="80" Margin="5">
                    <TextBlock Text="D" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="Gray" Width="80" Height="80" Margin="5">
                    <TextBlock Text="E" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="Beige" Width="80" Height="80" Margin="5">
                    <TextBlock Text="F" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </WrapPanel>
        </StackPanel>
    </DockPanel>
</Window>
