<Window x:Class="_6LAB.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 1: Приоритет триггеров" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="DemoButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>

            <Style.Triggers>
                <!-- Триггер 1: При наведении мыши -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>

                <!-- Триггер 2: При нажатии -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E7D32"/>
                    <Setter Property="Foreground" Value="Yellow"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Триггер 3: Когда кнопка отключена -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#fafafa">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Приоритет триггеров" 
                  FontSize="20" FontWeight="Bold" 
                  HorizontalAlignment="Center" Margin="10"
                  Foreground="#333"/>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Демонстрация приоритета триггеров:" 
                          FontSize="16" FontWeight="SemiBold" 
                          Margin="0,0,0,10"/>

                <TextBlock Text="Кнопка имеет несколько триггеров:" 
                          Margin="0,0,0,5"/>
                <TextBlock Text="1. IsMouseOver - меняет цвет и жирность шрифта" 
                          Margin="20,0,0,2" Foreground="#666"/>
                <TextBlock Text="2. IsPressed - меняет цвет, foreground и масштаб" 
                          Margin="20,0,0,2" Foreground="#666"/>
                <TextBlock Text="3. IsEnabled - серый цвет при отключении" 
                          Margin="20,0,0,10" Foreground="#666"/>

                <!-- Демонстрационные кнопки -->
                <Button Content="Тестовая кнопка (активная)" 
                       Style="{StaticResource DemoButtonStyle}"
                       Height="40"/>

                <Button Content="Тестовая кнопка (отключенная)" 
                       Style="{StaticResource DemoButtonStyle}"
                       Height="40" IsEnabled="False"
                       Margin="0,10,0,0"/>

                <TextBlock Text="Правило приоритета:" 
                          FontSize="16" FontWeight="SemiBold" 
                          Margin="0,20,0,10"/>

                <TextBlock Text="При срабатывании нескольких триггеров одновременно, приоритет имеют триггеры, расположенные ПОСЛЕ в XAML-коде (ниже в разметке)." 
                          TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="В данном случае, если кнопка нажата (IsPressed) и на нее наведен курсор (IsMouseOver), сработают оба триггера, но свойства из триггера IsPressed (который расположен после) будут иметь приоритет для общих свойств (Background, Foreground)." 
                          TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="Проверьте это поведение, наведя курсор на кнопку и нажав на нее!" 
                          FontWeight="SemiBold" Foreground="#E91E63"
                          TextWrapping="Wrap" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки навигации -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Center" Margin="10">
            <Button Content="Назад" Click="GoBack" 
                   Width="100" Margin="5"
                   Background="#FF9800"/>
            <Button Content="Выход" Click="ExitApp" 
                   Width="100" Margin="5"
                   Background="#f44336"/>
        </StackPanel>
    </Grid>
</Window>