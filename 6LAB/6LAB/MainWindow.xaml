<Window x:Class="_6LAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа №6 - Триггеры в WPF" 
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#f5f5f5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Лабораторная работа №6" 
                      FontSize="24" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,30"
                      Foreground="#333"/>

            <TextBlock Text="Триггеры в WPF-приложениях" 
                      FontSize="18" FontStyle="Italic"
                      HorizontalAlignment="Center" Margin="0,0,0,40"
                      Foreground="#666"/>

            <Button Content="Задание 1: Приоритет триггеров" 
                    Click="NavigateToTask1" 
                    Width="300"/>

            <Button Content="Задание 2: Текстовый редактор" 
                    Click="NavigateToTask2" 
                    Width="300"/>

            <Button Content="Выход" 
                    Click="ExitApplication" 
                    Width="150" 
                    Background="#f44336" 
                    Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>