@model _11_12lab.Models.Car

@{
    ViewBag.Title = "Удалить автомобиль";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удалить автомобиль</h2>

<div class="alert alert-warning">
    <h4>Вы уверены, что хотите удалить этот автомобиль?</h4>
    <p>Это действие нельзя будет отменить.</p>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Number)</dt>
        <dd>@Html.DisplayFor(model => model.Number)</dd>

        <dt>@Html.DisplayNameFor(model => model.Year)</dt>
        <dd>@Html.DisplayFor(model => model.Year)</dd>

        <dt>@Html.DisplayNameFor(model => model.Brand)</dt>
        <dd>@Html.DisplayFor(model => model.Brand)</dd>

        <dt>@Html.DisplayNameFor(model => model.Color)</dt>
        <dd>@Html.DisplayFor(model => model.Color)</dd>

        <dt>@Html.DisplayNameFor(model => model.Condition)</dt>
        <dd>@Html.DisplayFor(model => model.Condition)</dd>

        <dt>@Html.DisplayNameFor(model => model.OwnerName)</dt>
        <dd>@Html.DisplayFor(model => model.OwnerName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Address)</dt>
        <dd>@Html.DisplayFor(model => model.Address)</dd>

        <dt>Дата добавления</dt>
        <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="🗑️ Удалить" class="btn btn-danger" />
            @Html.ActionLink("← Отмена", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>