<Window x:Class="_10Lab.TaskExtraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Дополнительное задание - Имя 'VLAD'" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Viewbox Stretch="Uniform">
        <Grid Width="500" Height="300" Background="White">

            <!-- Заголовок -->
            <TextBlock Text="Имя: VLAD" 
                      FontSize="24" FontWeight="Bold" 
                      HorizontalAlignment="Center" VerticalAlignment="Top"
                      Margin="0,20" Foreground="DarkBlue"/>

            <Canvas Width="400" Height="200" Background="White" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Буква V -->
                <Polyline Stroke="Red" StrokeThickness="8" StrokeLineJoin="Round"
                         Points="20,50 60,150 100,50"/>

                <!-- Буква L -->
                <Polyline Stroke="Green" StrokeThickness="8" StrokeLineJoin="Round"
                         Points="130,50 130,150 190,150"/>

                <!-- Буква A -->
                <Polyline Stroke="Blue" StrokeThickness="8" StrokeLineJoin="Round"
                         Points="220,150 250,50 280,150"/>
                <Line X1="235" Y1="100" X2="265" Y2="100" Stroke="Blue" StrokeThickness="5"/>

                <!-- Буква D -->
                <Polyline Stroke="Purple" StrokeThickness="8" StrokeLineJoin="Round"
                         Points="310,50 310,150 370,150 390,100 370,50 306,50"/>

            </Canvas>

        </Grid>
    </Viewbox>
</Window>